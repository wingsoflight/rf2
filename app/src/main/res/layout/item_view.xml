<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="1dp"
    app:cardCornerRadius="5dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:id="@+id/itemImageVIew"
        android:src="@drawable/placeholder"/>
    <LinearLayout
        android:layout_margin="1dp"
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/itemImageVIew"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/itemTextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a title of ranobe. Chinese ranobe, which is not so popular in Russia"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/itemTextViewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999 +/- 999"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
    </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>