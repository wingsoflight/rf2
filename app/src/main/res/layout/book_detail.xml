<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp">
    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/bookTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="This is a title textview">
    </TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bookImageView"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_weight="4"
            android:src="@drawable/book_image_placeholder_vertical"
            android:scaleType="fitXY" />
        <LinearLayout
            android:paddingLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">
            <TextView
                android:paddingVertical="3dp"
                android:id="@+id/bookAuthorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Автор: "/>
            <TextView
                android:paddingVertical="3dp"
                android:id="@+id/bookChaptersCountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Всего глав: "/>
            <TextView
                android:paddingVertical="3dp"
                android:id="@+id/bookGenresTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Жанры: "/>
            <TextView
                android:paddingVertical="3dp"
                android:id="@+id/bookCountryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Страна: "/>
            <TextView
                android:id="@+id/bookRatingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:text="Рейтинг: "/>
            <TextView
                android:id="@+id/bookStatusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:text="Статус: "/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:paddingVertical="3dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookLikesCountTextView"
                    android:text="0"
                    android:textColor="@android:color/holo_green_dark"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_thumbs_up_down_black"/>
                <TextView
                    android:id="@+id/bookDislikesCountTextView"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/holo_red_dark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_eye"/>
                <TextView
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/bookViewCountTextView"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/bookDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/lorem_example_text"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>